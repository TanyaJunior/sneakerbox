<!-- app/views/sneakers/sales.html.erb -->

<h1>Sneakers on Sale</h1>

<div class="card-container">
  <% @sneakers_on_sale.each do |sneaker| %>
    <%= link_to sneaker_path(sneaker), class: 'show-details-link' do %>
      <div class="card">
           <%= cl_image_tag sneaker.photo.key %>
        <div class="card-infos">
          <div>
            <h2><%= sneaker.title %></h2>
            <h2><%= sneaker.brand %></h2>
            <p><%= sneaker.model %></p>
          </div>
          <h2 class="card-price">R<%= sneaker.price %></h2>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

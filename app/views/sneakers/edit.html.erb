<% Sneaker.all.each do |sneaker| %>
  <% if current_user == sneaker.user %>
    <p><%= sneaker.model %></p>
  <%= link_to 'Delete', sneaker_path(sneaker), method: :delete, data: { confirm: 'Are you sure you want to delete this sneaker?' } %>
  <% end %>
<% end %>


  <%= simple_form_for(@sneaker, html: { class: 'card p-4' }) do |f| %>
    <%= f.input :title, input_html: { class: 'form-control', placeholder: 'Eg: "Rare Air Jordan 1 in Mint Condition!"' } %>
    <%= f.input :brand, collection: ['Nike', 'Adidas', 'Puma', 'Reebok', 'New Balance', 'Converse', 'Vans', 'Fila', 'Balenciaga' ], prompt: "Select a brand" %>
    <%= f.input :model, input_html: { class: 'form-control' } %>
    <%= f.input :description, input_html: { class: 'form-control' } %>
    <%= f.input :size, collection: (3..14).step(0.5).to_a, prompt: "Select a size (UK)" %>
    <%= f.input :price, input_html: { class: 'form-control', placeholder: 'Â£', pattern: "[0-9]*" } %>
    <%= f.input :photo, as: :file %>
    <%= f.submit 'Update Sneaker' %>
  <% end %>
  <%= link_to 'Back to Sneakers', sneakers_path %>

</div>
